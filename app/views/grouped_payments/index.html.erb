<p id="notice"><%= notice %></p>

<h1>Grouped Payments</h1>

<table>
  <thead>
    <tr>
      <th>Deposit</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grouped_payments.each do |grouped_payment| %>
      <tr>
        <td><%= grouped_payment.deposit_id %></td>
        <td><%= grouped_payment.group_id %></td>
        <td><%= link_to 'Show', grouped_payment %></td>
        <td><%= link_to 'Edit', edit_grouped_payment_path(grouped_payment) %></td>
        <td><%= link_to 'Destroy', grouped_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

